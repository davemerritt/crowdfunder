<%= link_to 'Edit Project', edit_project_path %>
<%= link_to 'Delete Project', @project, :confirm => "Delete this project?", :method => :delete %>
<h1>
	<%= @project[:name] %>
</h1>
	<hr/>
<p>
	Project Name: <%= @project[:description] %>
	<hr/>
	Project Goal: <%= number_to_currency(@project.goal) %>
	<hr/>
	</p>
	Total Pledged: <%= number_to_currency(@project.pledges.sum(:amount)) %>

<p><% time_diff_components = Time.diff(@project[:starttime], @project[:endtime]) %>
   Number of Days Left: <%= time_diff_components[:day] %> 
</p>

