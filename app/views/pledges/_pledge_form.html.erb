<% if current_user %>
<h3>Pledge for <%= @project.name %></h3>

<%= form_for [@project, @pledge] do |f| %>
	
	<% if @pledge.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@pledge.errors.count, "error") %> prohibited this pledge from being made:</h2>
			<ul>
			<% @pledge.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="large-4 columns">
		<%= f.label :amount %><br />
		<%= f.number_field :amount, :min => 1 %>
	</div><hr/>
	<div class="action">
		<button class="button [radius round]">Create Pledge</button>
	</div>
<% end %>

	<% else %>
		<p>Please <%= link_to 'log in', new_user_session_path %> to pledge</p>
	<% end %>